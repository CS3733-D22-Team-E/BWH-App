                                    <DatePicker fx:id="deliveryDate" prefHeight="25.0" prefWidth="150.0" />
                                    <CheckBox fx:id="isUrgent" mnemonicParsing="false" text="Urgent" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
                                 <children>
                                    <JFXComboBox fx:id="equipmentQuantity" promptText="Select Quantity" />
                                    <JFXComboBox fx:id="equipmentType" promptText="Select Equipment" />
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                        <HBox alignment="CENTER" minHeight="10.0" minWidth="10.0" spacing="10.0" VBox.vgrow="ALWAYS">
                           <children>
                              <JFXButton fx:id="submitButton" alignment="CENTER" maxHeight="50.0" maxWidth="150.0" minHeight="10.0" minWidth="10.0" mnemonicParsing="false" onAction="#submitButton" styleClass="submitButton" text="Submit" textFill="WHITE" HBox.hgrow="ALWAYS">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </JFXButton>
