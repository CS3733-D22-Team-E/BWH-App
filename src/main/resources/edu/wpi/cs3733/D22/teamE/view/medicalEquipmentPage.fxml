                        <TableView fx:id="medRequestTable" prefHeight="315.0" prefWidth="624.0" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="tableDeliveryDate" prefWidth="81.0" text="Delivery Date" />
