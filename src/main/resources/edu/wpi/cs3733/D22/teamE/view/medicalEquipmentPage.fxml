                              <TableColumn fx:id="tableOtherNotes" prefWidth="54.0" text="Notes" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </HBox>
         </children>
      </StackPane>
   </children>
</VBox>
