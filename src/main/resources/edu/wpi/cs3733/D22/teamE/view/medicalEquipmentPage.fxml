                                 <children>
                                    <JFXComboBox fx:id="floor" promptText="Select Floor" />
                                    <JFXComboBox fx:id="room" promptText="Select Room" />
                                 </children>
                              </HBox>
                              <Label styleClass="requestFields" text="Location:" />
